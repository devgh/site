#!/bin/bash

nginx &

echo "DEVELOPMENT: $DEVELOPMENT"

if [ "$DEVELOPMENT" == "true" ]; then
    export JEKYLL_ENV=development
    $(bundle exec jekyll serve \
        --verbose \
        --incremental \
        -H 0.0.0.0 \
        -P 5000 \
        --force_polling \
        --watch) "$@"
else
    export JEKYLL_ENV=production
    $(bundle exec jekyll serve \
        -H 0.0.0.0 \
        -P 5000) "$@"
fi
